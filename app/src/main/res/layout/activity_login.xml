<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/where"
        android:layout_marginBottom="50dp"/>
    <EditText
        android:id="@+id/signin_id"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="17sp"
        android:hint="       example@email.com"
        android:background="@drawable/signblankbtn_outline"/>
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/signin_pwd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="17sp"
        android:hint="       ************"
        android:background="@drawable/signblankbtn_outline"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:buttonTint="@color/themecolor"
            android:checked="true"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="자동 로그인"
            android:gravity="center"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/login_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/signupbtn_outline"
        android:text="로그인"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <TextView
            android:id="@+id/login_findid"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="아이디 찾기"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#888888" />
        <LinearLayout
            android:background="#888888"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_width="1dp"
            android:orientation="vertical"></LinearLayout>
        <TextView
            android:id="@+id/login_findpwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="비밀번호 찾기"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#888888" />
        <LinearLayout
            android:background="#888888"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_width="1dp"
            android:orientation="vertical"></LinearLayout>
        <TextView
            android:id="@+id/login_signup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="회원가입"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#888888" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginTop="70dp">
    </LinearLayout>







</LinearLayout>